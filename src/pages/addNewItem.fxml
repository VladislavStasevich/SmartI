        <opaqueInsets>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </opaqueInsets>
        <padding>
            <Insets bottom="8.0" left="8.0" right="30.0" top="8.0"/>
        </padding>
    </GridPane>
    <HBox>
        <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" text="Отмена">
            <HBox.margin>
                <Insets left="155.0" right="8.0"/>
            </HBox.margin>
        </Button>
        <Button defaultButton="true" mnemonicParsing="false" onAction="#onSubmit" text="Добавить"/>
    </HBox>
    <opaqueInsets>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
