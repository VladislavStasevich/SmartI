<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="208.0" prefWidth="466.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddNewItemController">
    <GridPane hgap="8.0" prefHeight="160.0" prefWidth="561.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="203.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="523.0" minWidth="10.0" prefWidth="261.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" valignment="CENTER"/>
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" valignment="CENTER"/>
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" valignment="CENTER"/>
            <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" valignment="CENTER"/>
        </rowConstraints>
        <children>
            <Label text="Наименование" GridPane.halignment="RIGHT"/>
            <Label text="Тип" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
            <Label text="Количество" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
            <Label text="Стоймость за еденицу" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
            <TextField fx:id="name" GridPane.columnIndex="1"/>
            <TextField fx:id="type" prefHeight="25.0" prefWidth="467.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <TextField fx:id="count" onKeyTyped="#onCountKeyTyped" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
